	<!-- Terrain thermal properties -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterDeep"]</xpath>
		<value>
			<li Class="Celsius.TerrainThermalProperties">
				<heatCapacity>240</heatCapacity>
				<insulation>7</insulation>
				<phaseTransition>Freeze</phaseTransition>
				<transitionTemperature>-2</transitionTemperature>
			</li>
		</value>
	</Operation>

