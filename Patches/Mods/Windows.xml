<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- WINDOWS -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="SimpleOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>10000</heatCapacity>
				<conductivity>4</conductivity>
				<conductivityWhenOpen>6</conductivityWhenOpen>
				<volume>5</volume>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="OpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>10000</heatCapacity>
				<conductivity>1.5</conductivity>
				<conductivityWhenOpen>4.5</conductivityWhenOpen>
				<volume>5</volume>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="LargeOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>11000</heatCapacity>
				<volume>6</volume>
				<conductivity>1.6</conductivity>
				<conductivityWhenOpen>4.8</conductivityWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="HugeOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>12000</heatCapacity>
				<volume>7</volume>
				<conductivity>1.7</conductivity>
				<conductivityWhenOpen>5</conductivityWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="ReinforcedOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>11000</heatCapacity>
				<volume>6</volume>
				<conductivity>1.5</conductivity>
				<conductivityWhenOpen>4.5</conductivityWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="LargeReinforcedOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>12000</heatCapacity>
				<volume>7</volume>
				<conductivity>1.6</conductivity>
				<conductivityWhenOpen>4.8</conductivityWhenOpen>
			</li>
		</value>
	</Operation>

</Patch>
