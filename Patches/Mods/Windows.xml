<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- WINDOWS -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="SimpleOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>4</heatCapacity>
				<volume>0.005</volume>
				<isolation>4</isolation>
				<airflow>0.1</airflow>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="OpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>4</heatCapacity>
				<volume>0.005</volume>
				<isolation>4</isolation>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="LargeOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>4.5</heatCapacity>
				<volume>0.006</volume>
				<isolation>3.75</isolation>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="HugeOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>5</heatCapacity>
				<volume>0.007</volume>
				<isolation>3.5</isolation>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="ReinforcedOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>4.5</heatCapacity>
				<volume>0.006</volume>
				<isolation>4.5</isolation>
				<airflowWhenOpen>0.7</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="LargeReinforcedOpenWindow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>5</heatCapacity>
				<volume>0.007</volume>
				<isolation>4.25</isolation>
				<airflowWhenOpen>0.7</airflowWhenOpen>
			</li>
		</value>
	</Operation>

</Patch>
