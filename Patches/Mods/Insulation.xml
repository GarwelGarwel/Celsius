<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- INSULATION -->

	<!-- Buildings -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="INSWall_Base"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>5000</heatCapacity>
				<conductivity>1</conductivity>
				<volume>15</volume>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="INSDoor_Base"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>4000</heatCapacity>
				<conductivity>1.5</conductivity>
				<volume>12.5</volume>
			</li>
		</value>
	</Operation>

	<!-- Stuff -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="INSSlab_Biomass"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>1400</volumetricHeatCapacity>
				<conductivity>0.15</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="INSSlab_Fibre"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>1600</volumetricHeatCapacity>
				<conductivity>0.1</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="INSSlab_Polymer"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>1800</volumetricHeatCapacity>
				<conductivity>0.07</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="INSSlab_Hyper"]</xpath>
		<value>
			<li Class="Celsius.StuffThermalProperties">
				<volumetricHeatCapacity>2000</volumetricHeatCapacity>
				<conductivity>0.05</conductivity>
			</li>
		</value>
	</Operation>

	<!-- Ignition data -->

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Biomass"]</xpath>
		<value>
			<statBases>
				<IgnitionTemperature>120</IgnitionTemperature>
			</statBases>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Fibre"]</xpath>
		<value>
			<statBases>
				<IgnitionTemperature>200</IgnitionTemperature>
			</statBases>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="INSSlab_Polymer"]</xpath>
		<value>
			<statBases>
				<IgnitionTemperature>270</IgnitionTemperature>
			</statBases>
		</value>
	</Operation>

</Patch>
