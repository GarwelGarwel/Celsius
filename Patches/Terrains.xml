<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Note: Taking only 10 cm layer of water/ice => heat capacity for 0.10 of a cubic meter. Conductivity is increased x6 to account for RimWorld's shorter year. -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterDeep"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>420000</heatCapacity>
				<conductivity>6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterOceanDeep"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>400000</heatCapacity>
				<conductivity>6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterMovingChestDeep"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>600000</heatCapacity>
				<conductivity>6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterShallow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>420000</heatCapacity>
				<conductivity>6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterOceanShallow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>400000</heatCapacity>
				<conductivity>6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterMovingShallow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>500000</heatCapacity>
				<conductivity>6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="Marsh"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>270000</heatCapacity>
				<conductivity>8</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="Ice"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>200000</heatCapacity>
				<conductivity>12</conductivity>
			</li>
		</value>
	</Operation>

</Patch>
