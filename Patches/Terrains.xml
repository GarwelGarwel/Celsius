<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Note: Taking only 25 cm layer of water/ice => heat capacity for 0.25 of a cubic meter. Conductivity is increased x6 to account for RimWorld's shorter year. -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterDeep"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1050000</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterOceanDeep"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1000000</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterMovingChestDeep"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1500000</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterShallow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1050000</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterOceanShallow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1000000</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="WaterMovingShallow"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>1250000</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="Marsh"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>675000</heatCapacity>
				<conductivity>1</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="Ice"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>500000</heatCapacity>
				<conductivity>2</conductivity>
			</li>
		</value>
	</Operation>

</Patch>
