<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Cooked food -->

	<!-- Assuming food specific heat capacity ~3500 J/kg/C. Source: https://www.engineeringtoolbox.com/specific-heat-capacity-food-d_295.html -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="MealBaseIngredientless"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<heatCapacity>1500</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Kibble"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<heatCapacity>50</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Pemmican"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<heatCapacity>60</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<!-- Ingredients -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Milk"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<heatCapacity>170</heatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="EggBase"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<heatCapacity>480</heatCapacity>
				<conductivity>1</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="OrganicProductBase"]</xpath>
		<value>
			<li Class="TemperaturesPlus.StuffThermalProperties">
				<specificHeatCapacity>3500</specificHeatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<!-- Manufactured goods -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Medicine"]</xpath>
		<value>
			<li Class="TemperaturesPlus.StuffThermalProperties">
				<specificHeatCapacity>4000</specificHeatCapacity>
				<conductivity>0.6</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Chemfuel"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<heatCapacity>100</heatCapacity>
				<conductivity>0.1</conductivity>
			</li>
		</value>
	</Operation>

</Patch>
