<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Note: Specific heat capacity in J/kg/C. Figures can be taken e.g. here: https://www.engineeringtoolbox.com/specific-heat-solids-d_154.html -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Mineable"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<replacesAirProperties>true</replacesAirProperties>
				<heatCapacity>2200000</heatCapacity>
				<conductivity>2.5</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Building_Door"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<replacesAirProperties>true</replacesAirProperties>
				<mass>8</mass>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Wall"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<replacesAirProperties>true</replacesAirProperties>
				<mass>20</mass>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Vent"]</xpath>
		<value>
			<li Class="TemperaturesPlus.ThingThermalProperties">
				<replacesAirProperties>true</replacesAirProperties>
				<heatCapacity>9300</heatCapacity>
				<conductivity>20</conductivity>
			</li>
		</value>
	</Operation>

</Patch>
