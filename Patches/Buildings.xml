<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Mineable"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>100</heatCapacity>
				<volume>0.5</volume>
				<isolation>5</isolation>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Door"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>5</heatCapacity>
				<volume>0.0075</volume>
				<isolation>4</isolation>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Autodoor"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>5</heatCapacity>
				<volume>0.0075</volume>
				<isolation>4</isolation>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="AnimalFlap"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>3</heatCapacity>
				<isolation>3.5</isolation>
				<airflow>0.1</airflow>
				<airflowWhenOpen>0.75</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Wall"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>7</heatCapacity>
				<volume>0.010</volume>
				<isolation>5</isolation>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Vent"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>6</heatCapacity>
				<isolation>4</isolation>
				<airflow>0.05</airflow>
				<airflowWhenOpen>0.9</airflowWhenOpen>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Cooler"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>6</heatCapacity>
				<isolation>4</isolation>
			</li>
		</value>
	</Operation>

</Patch>
