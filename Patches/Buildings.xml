<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Note: Heat capacity in J/C, conductivity in W/C. Figures can be taken e.g. here: https://www.engineeringtoolbox.com/specific-heat-solids-d_154.html -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Mineable"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2200000</heatCapacity>
				<conductivity>2.5</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Mineable"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>2200000</heatCapacity>
				<conductivity>2.5</conductivity>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Building_Door"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<!--mass>8</mass-->
				<heatCapacity>12000</heatCapacity>
			</li>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<xpath>Defs/ThingDef[thingClass="Building_Door"]</xpath>
		<value>
			<statBases>
				<Mass>8</Mass>
			</statBases>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Wall"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<!--mass>20</mass-->
				<heatCapacity>16000</heatCapacity>
			</li>
		</value>
	</Operation>

	<Operation Class="XmlExtensions.PatchOperationSafeAdd">
		<xpath>Defs/ThingDef[defName="Wall"]</xpath>
		<value>
			<statBases>
				<Mass>20</Mass>
			</statBases>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Vent"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>9300</heatCapacity>
				<conductivity>20</conductivity>
			</li>
		</value>
	</Operation>

</Patch>
