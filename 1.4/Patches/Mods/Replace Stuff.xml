<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- REPLACE STUFF -->

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Cooler_Over" or defName="Cooler_Over2W"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>6</heatCapacity>
				<insulation>4</insulation>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Vent_Over"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>6</heatCapacity>
				<insulation>4</insulation>
				<airflowWhenOpen>0.9</airflowWhenOpen>
			</li>
		</value>
	</Operation>

</Patch>
